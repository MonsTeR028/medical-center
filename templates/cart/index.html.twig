{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    {% if items|length > 0 %}
        <table class="table">
            <thead>
                <tr>
                    <th>Produit</th>
                    <th>Prix</th>
                    <th>Quantit√©</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for item in items %}
                    <tr>
                        <td>{{ item.product.name }}</td>
                        <td>{{ item.product.priceUnit }}</td>
                        <td>{{ item.quantity }}</td>
                        <td>{{ item.product.priceUnit * item.quantity }}</td>
                        <td>
                            <a href="{{ path('app_cart_remove', {id: item.product.id}) }}" class="btn btn-danger-sm">
                                Supprimer
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-right">Total :</td>

                    <td>{{ total }}</td>
                    <td></td>
                </tr>
            </tfoot>
        </table>
    {% else %}
        <h1>Votre panier est vide !</h1>
    {% endif %}
{% endblock %}
