{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
<div class="main-cart">
    <h3 class="league-spartan-extrabold">Votre Panier</h3>
    {% if items|length > 0 %}
        <form method="post">
            <div class="cart-items">
                {% for item in items %}
                    <div class="cart-item">
                        <div class="cart-item-presentation">
                            <label>
                                <input type="checkbox" name="item" value="{{ item.product.id }}">
                            </label>
                            {% if item.product.imageFileName %}
                                <img src="{{ item.product.imageFileName }}" alt="{{ item.product.name }}">
                            {% else %}
                                <img src="{{ asset('images/placeholder.png') }}" alt="Pas d'image">
                            {% endif %}
                            <div class="cart-item-description">
                                <p>{{ item.product.name }}</p>
                                <p>Type : {{ item.product.type }}</p>
                                <p>Voie : VOIE</p>
                            </div>
                        </div>
                        <div class="cart-item-modify">
                            <div class="cart-item-price">
                                <p>{{ item.product.priceUnit * item.quantity }}</p>
                                <p>{{ item.quantity }}</p>
                            </div>
                            <a href="{{ path('app_cart_remove', {id: item.product.id}) }}" class="btn btn-danger-sm">
                                Supprimer
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <button type="submit">Passer commande (NB articles) : {{ total }} â‚¬</button>
        </form>
    {% else %}
        <p class="cart-empty">Votre panier est vide !</p>
    {% endif %}
</div>
{% endblock %}
