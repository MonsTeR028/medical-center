{% extends 'base.html.twig' %}

{% block title %}Gestion adresses{% endblock %}

{% block body %}
    <div class="main">
        <h1>Adresses enregistrÃ©es</h1>
        <a href="{{ path('app_adresse_create') }}" class="btn btn-primary">Ajouter une adresse</a>
        {% for adresse in user.adresse %}
            <div class="adresse-item">
                <p>{{ adresse.adresse }}</p>
