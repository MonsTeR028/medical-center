<div class="orders-list">
    {% if orders is not empty %}
        <ul>
            {% for order in orders %}
                <li class="order-item">
                    <h3>Commande #{{ order.id }}</h3>
                    <p>Commande du : {{ order.orderDate|date('d/m/Y') }}</p>
                    <p>Montant total : {{ order.totalAmount }} €</p>
                    <p>Statut : {{ order.status }}</p>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <p>Aucune commande trouvée.</p>
    {% endif %}
</div>
