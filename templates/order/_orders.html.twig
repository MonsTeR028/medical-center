{% if orders is not empty %}
    {% for order in orders %}
        <div class="order">
            <div class="order-title">
                <p class="inter-regular">Commande du : {{ order.orderDate|date('d/m/Y') }}</p>
                <p class="league-spartan-light">N°de commande {{ order.id }}</p>
            </div>
            <div class="order-info">
                <p class="inter-regular">Total :</p>
                <p class="league-spartan-semibold">{{ order.totalAmount }}€</p>
            </div>
            {% if data[order.id] is defined %}
                <ul class="order-medecines">
                    {% for item in data[order.id] %}
                        <li class="order-medecine">
                            {{ item.quantity }}x {{ item.medicine.name }}
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}
            <a href="{{ path('app_order_show', {id: order.id}) }}" class="league-spartan-regular">Voir la commande</a>
        </div>
    {% endfor %}
{% else %}
    <p class="league-spartan-regular no-orders">Aucune commande trouvée.</p>
{% endif %}
