{% extends 'base.html.twig' %}

{% block title %}Mon Compte{% endblock %}

{% block body %}
    <div class="main">
        <h1>Mon Compte</h1>
        <div class="information">
            <h2>Informations</h2>
            <p>{{ user.lastname }} {{ user.firstname }}</p>
            <p>Email : {{ user.email }}</p>
            <p>Téléphone : {{ user.tel }}</p>
            <p>N°RRPS : {{ user.RRPS }}</p>
        </div>
        <div class="adresses-container">
            <h2>Adresse(s)</h2>
            {% for adresse in user.adresse %}
                <div class="adresse-item">
                    <p>{{ adresse.adresse }}</p>
                    <p>{{ adresse.zipcode }}</p>
                    <p>{{ adresse.city }}</p>
                </div>
            {% endfor %}
        </div>
        <div class="active-orders-container">
            <h2>Commandes en cours</h2>
            {{ include('order/_orders.html.twig') }}
        <div class="security">
            <button class="btn-change-password" onclick="window.location.href='{{ path('app_user_change_password') }}'">Changer le mot de passe</button>
            <button class="btn-logout" onclick="window.location.href='{{ path('app_logout') }}'">Déconnexion</button>
        </div>
    </div>

    <style>
        /* Global Styles */
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f9f9f9;
            color: #333;
        }

        /* Main Container */
        .main {
            max-width: 800px;
            margin: 40px auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        .main h1 {
            text-align: center;
            color: #444;
        }

        /* User Information Section */
        .information {
            margin-bottom: 20px;
        }

        .information h2 {
            margin-bottom: 10px;
            font-size: 20px;
            color: #555;
            border-bottom: 2px solid #ddd;
            padding-bottom: 5px;
        }

        .information p {
            margin: 5px 0;
            font-size: 16px;
        }

        /* Addresses Section */
        .adresses-container {
            margin-bottom: 20px;
        }

        .adresses-container h2 {
            margin-bottom: 10px;
            font-size: 20px;
            color: #555;
            border-bottom: 2px solid #ddd;
            padding-bottom: 5px;
        }

        .adresse-item {
            padding: 10px;
            margin-bottom: 10px;
            background-color: #f7f7f7;
            border: 1px solid #ddd;
            border-radius: 6px;
        }

        .adresse-item p {
            margin: 2px 0;
            font-size: 15px;
        }

        /* Security Section */
        .security {
            display: flex;
            justify-content: space-between;
            gap: 10px;
            margin-top: 20px;
        }

        .security .btn-change-password,
        .security .btn-logout {
            flex: 1;
            padding: 10px;
            font-size: 16px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .security .btn-change-password {
            background-color: #007bff;
            color: #fff;
        }

        .security .btn-change-password:hover {
            background-color: #0056b3;
        }

        .security .btn-logout {
            background-color: #dc3545;
            color: #fff;
        }

        .security .btn-logout:hover {
            background-color: #a71d2a;
        }

    </style>
{% endblock %}
